<h3 class="calculator-title">BMI and Body Fat Logs</h3>
  <div class="history-logs">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight (kg)</th>
          <th>Height (cm)</th>
          <th>Waist (cm)</th>
          <th>Neck (cm)</th>
          <th>Hip (cm)</th>
          <th>BMI</th>
          <th>BMI Range</th>
          <th>Body Fat %</th>
          <th>Body Fat Range</th>
        </tr>
      </thead>
      <tbody>
        <% @calculations.each do |entry| %>
          <tr>
            <td><%= entry.date&.strftime("%Y-%m-%d") %></td>
            <td><%= entry.weight %></td>
            <td><%= entry.height %></td>
            <td><%= entry.waist_line %></td>
            <td><%= entry.neck_line %></td>
            <td><%= entry.hip.presence || "-" %></td>
            <td><%= entry.bmi %></td>
            <td><%= entry.bmi_range %></td>
            <td><%= entry.body_fat %>%</td>
            <td><%= entry.body_fat_range(current_user.gender) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="back-calc">
      <%= link_to 'Back to Calculator', user_calculator_path(current_user) %>
  </div>


