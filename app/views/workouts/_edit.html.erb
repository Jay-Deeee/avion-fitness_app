<%= form_with model: @workout, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <% @workout.errors.full_messages_for(:name).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <br />

  <%= f.submit "Save Workout", class: "btn btn-success" %>
<% end %>
